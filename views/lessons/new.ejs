
<%- include('../partials/header')%>
<%- include('../partials/aside')%>

<main class="add-form">

<h2>Create a new lesson:</h2>
<form action="/lessons" method="POST">
    <label>Category:</label>
    <input type="text" name="category"><br>
    <label>Date:</label>
    <input class="lesson-date" type="date" name="date"><br>
    <label>Plane:</label>
    <select name="planes">
        <% planes.forEach(function(p) { %>
        <option><%= p %></option>
        <% }) %>
    </select><br>
    <label>Instructor:</label>
    <input type="text" name="instructor"><br>
    <label>Flight Hours:</label>
    <input type="number" step='0.01' name="hours"><br>
    <label>Description:</label>

    <div class="form-group">
        <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <!-- <label>Weight & Balance:</label>
        <input type="number" step="0.1" name="weightAndBalance"> -->

    <button class="btn btn-outline-info" id="add-lesson" type="submit">Add Lesson</button>
</form>

</main>

<%- include('../partials/footer')%>
